apiVersion: v1
kind: Service
metadata:
  name: telegraf-service
  labels:
    app: telegraf-app
spec:
  selector:
    app: telegraf-app
  ports:
    - port: 8125
      protocol: TCP
      name: http
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: telegraf-deployment
  labels:
    app: telegraf-app
spec:
  selector:
    matchLabels:
      app: telegraf-app
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: telegraf-app
    spec:
      restartPolicy: Always
      containers:
      - image: telegraf
        name: telegraf
        ports:
        - containerport: 8125
          name: telegraf
        imagePullPolicy: Never
        volumeMounts:
        - mountPath: /var/run/docker.sock
          name: dockersock
      volumes:
      - name: dockersock
        hostPath:
          path: /var/run/docker.sock        
