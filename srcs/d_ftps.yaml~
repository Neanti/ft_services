apiVersion: v1
kind: Service
metadata:
  name: ftps-service
  labels:
    app: ftps-app
spec:
  type: LoadBalancer
  ports:
  - port: 21
    nodePort: 21
    targetPort: 21
    protocol: TCP
    name: ftps
  - port: 30000
    nodePort: 30000
    targetPort: 30000
    protocol: TCP
    name: ftps-passiv
  selector:
    app: ftps-app
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ftps-deployment
spec:
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: ftps-app
  replicas: 1
  template:
    metadata:
      labels:
        app: ftps-app
    spec:
      restartPolicy: Always
      containers:
      - image: ftps
        name: ftps
        imagePullPolicy: Never
        ports:
        - containerPort: 21
          name: ftps
        - containerPort: 30000
          name: ftps-passiv
